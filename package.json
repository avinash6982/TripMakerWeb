{
  "name": "tripmaker-monorepo",
  "version": "1.0.0",
  "description": "TripMaker monorepo - Frontend and Backend applications",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "web": "npm run dev --workspace=apps/frontend",
    "test:sanity": "node test-mvp2-sanity.js",
    "test:smoke": "node scripts/smoke-api.js",
    "test:playwright": "node scripts/playwright-home-chat.mjs",
    "dev": "concurrently \"npm run dev --workspace=apps/backend\" \"npm run dev --workspace=apps/frontend\"",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "build": "cd apps/frontend && npm run build",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "build:backend": "npm run build --workspace=apps/backend --if-present",
    "start": "npm run start --workspaces --if-present",
    "start:backend": "npm run start --workspace=apps/backend",
    "test": "npm run test --workspaces --if-present"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/avinash6982/TripMakerWeb.git"
  },
  "keywords": [
    "monorepo",
    "tripmaker",
    "react",
    "node",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/avinash6982/TripMakerWeb/issues"
  },
  "homepage": "https://github.com/avinash6982/TripMakerWeb#readme",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/s3-request-presigner": "^3.700.0"
  },
  "devDependencies": {
    "@vercel/node": "^5.5.28",
    "concurrently": "^9.2.1",
    "playwright": "^1.58.2"
  }
}
