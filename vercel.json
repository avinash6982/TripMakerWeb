{
  "version": 2,
  "builds": [
    {
      "src": "apps/backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "apps/frontend/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "apps/backend/server.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "apps/frontend/dist/$1" }
  ]
}
